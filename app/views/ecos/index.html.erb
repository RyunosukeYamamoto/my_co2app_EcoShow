<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Sign up now!', signup_path %>
  <%= link_to 'Sign in', login_path %>
<% end %>


<h1>エコアクション一覧</h1>

<h2><%= @total_co2 %></h2>
<h2><%= @kiro %>キロ走行</h2>
<h2><%= car_distance( @kiro ) %></h2>

<ul>
  <% @ecos.each do |eco| %>
    <li><%= link_to eco.action, edit_eco_path(eco) %> | <%= eco.co2 %>グラム</li>
  <% end %>
</ul>
<%= paginate @ecos %>

<%= link_to '新規エコアクションの投稿', new_eco_path %>