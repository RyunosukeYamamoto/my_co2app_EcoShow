<header class='mb-0'>
  <nav class='navbar navbar-expand-sm navbar-dark bg-dark pt-4 pb-4'>
    <a class='navbar-brand' href='/'>EcoShow</a>
    <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent'>
      <span class='navbar-toggler-icon'></span>
    </button>
    
    <div class='collapse navbar-collapse justify-content-end' id='navbarSupportedContent'>
      <ul class='navbar-nav'>
        <% if logged_in? %>
          <li class='nav-item'><%= link_to '新規エコアクションの投稿', new_eco_path, class: 'btn btn-outline-success' %></li>
          <li class='nav-item dropdown'>
            <a href='#' class='nav-link dropdown-toggle' data-toggle='dropdown'><%= current_user.name %></a>
            <ul class='dropdown-menu dropdown-menu-right'>
              <li class='dropdown-item'><%= link_to 'My profile', user_path(current_user) %></li>
              <li class='dropdown-divider'></li>
              <li class='dropdown-item'><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class='nav-item'><%= link_to 'ログインせずにエコアクションを投稿', new_eco_path, class: 'btn btn-outline-success' %></li>
          <li class='nav-item'><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
          <li class='nav-item'></li><%= link_to 'Login', login_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>